{
  "name": "sendanywhere-api",
  "version": "1.0.0",
  "description": "SendAnywhere is a mobile app that connects users with nearby couriers for on-demand parcel delivery. Users can easily request a pickup for their parcel, track its progress, and receive real-time updates. Couriers can accept delivery requests, navigate to pickup locations, and deliver parcels efficiently.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run build && npm run start:prod",
    "start:dev": "ts-node-dev src/index.ts",
    "start:prod": "node dist/index.js",
    "build": "tsc",
    "eslint:check": " node node_modules/eslint/bin/eslint.js \"./**/*.ts\"",
    "eslint:fix": "eslint --fix src/",
    "prettier:check": "prettier --check \"./**/*.ts\"",
    "prettier:fix": "prettier --write \"./**/*.ts\"",
    "check:lint": "npm run eslint:check && npm run prettier:check",
    "lint": "npm run eslint:fix && npm run prettier:fix"
  },
  "author": "Adefolaju Akinloluwa Ariyo",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "eslint": "^9.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.1.0"
  }
}
